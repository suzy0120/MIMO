pipeline {
    agent { label 'dev' }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build jar') {
            steps {
                dir('backend') {
                    echo 'Building jar'
                    sh 'chmod +x gradlew'
                    sh './gradlew clean bootjar'
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('backend') {
                    echo 'Deploying to Development Environment'
                    sh 'docker compose up dev --build -d'
                    sh 'docker image prune -f'
                }
            }
        }
    }
    post {
        always {
            echo 'Build completed'
        }
    }
}

